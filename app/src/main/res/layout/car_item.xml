<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/vv_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/bmw_5_series" />


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="16dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/vv_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="â‚¬76/day" />

    <View
        android:id="@+id/vv_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/gray"
        app:layout_constraintCircleRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/vv_line"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintBottom_toTopOf="@id/vv_line_end"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintStart_toEndOf="@id/iv_car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vv_line_end"
        app:layout_constraintTop_toBottomOf="@id/vv_line">

        <ImageView
            android:id="@+id/iv_vec_car"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_car"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/luxury"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toEndOf="@id/iv_vec_car"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/iv_vec_set"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_settings"
            app:layout_constraintTop_toBottomOf="@id/iv_vec_car"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Automatic"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toEndOf="@id/iv_vec_set"
            app:layout_constraintTop_toBottomOf="@id/tv_car_type"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <ImageView
            android:id="@+id/iv_vec_snowflake"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_snowflake"
            app:layout_constraintTop_toBottomOf="@id/iv_vec_set"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_snowflake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Yes"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toEndOf="@id/iv_vec_snowflake"
            app:layout_constraintTop_toBottomOf="@id/tv_set"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/vv_line_end"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>